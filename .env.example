TIMEZONE=America/New_York
PIHOLE_PASSWORD=
# Optional: Set if you want to override detected IP
# PI_IP=192.168.1.100

# Optional API Keys for Homepage widgets
# Pi-hole API key (from Settings -> API in Pi-hole admin)
# PIHOLE_API_KEY=
# Home Assistant long-lived access token (from Profile -> Security)
# HOMEASSISTANT_API_KEY=
# Jellyfin API key (from Dashboard -> Advanced -> API Keys)
# JELLYFIN_API_KEY=
# Portainer API key (from Account settings -> Access tokens)
# PORTAINER_API_KEY=

# Optional Netdata Cloud integration
# Get these from https://app.netdata.cloud when adding a new node
# NETDATA_CLAIM_TOKEN=your_claim_token_here
# NETDATA_CLAIM_ROOMS=your_room_id_here
